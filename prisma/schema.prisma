generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id             Int        @id @default(autoincrement())
  username       String     @unique
  name           String?
  email          String     @unique
  code           String?    @unique
  password       String     @default("")
  theme          String     @default("classic")
  isAdmin        Int        @default(0) @map("is_admin")
  active         Int        @default(1)
  emailVerified  DateTime?  @map("email_verified")
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")
  cleanings      Cleaning[]
  sessions       Session[]
  accounts       Account[]

  @@map("users")
}

model Branch {
  branchId              Int        @id @default(autoincrement()) @map("branch_id")
  name                  String
  address               String?
  active                Int        @default(1)
  toNotificationEmails  String     @map("to_notification_emails")
  ccNotificationEmails  String     @map("cc_notification_emails")
  createdAt             DateTime   @default(now()) @map("created_at")
  updatedAt             DateTime   @updatedAt @map("updated_at")
  locations             Location[]

  @@map("branches")
}

model Location {
  locationId          Int         @id @default(autoincrement()) @map("location_id")
  branchId            Int         @map("branch_id")
  locationName        String      @map("location_name")
  locationDescription String?     @map("location_description")
  active              Int         @default(1)
  createdAt           DateTime    @default(now()) @map("created_at")
  updatedAt           DateTime    @updatedAt @map("updated_at")
  branch              Branch      @relation(fields: [branchId], references: [branchId])
  bathrooms           Bathroom[]

  @@map("locations")
  @@index([branchId])
}

model Bathroom {
  bathroomId         Int              @id @default(autoincrement()) @map("bathroom_id")
  locationId         Int              @map("location_id")
  order              Int
  name               String
  gender             String
  status             String           @default("open")
  notificationEmail  String?          @map("notification_email")
  active             Int              @default(1)
  createdAt          DateTime         @default(now()) @map("created_at")
  updatedAt          DateTime         @updatedAt @map("updated_at")
  location           Location         @relation(fields: [locationId], references: [locationId])
  bathroomTasks      BathroomTask[]
  cleanings          Cleaning[]
  inspections        Inspection[]

  @@map("bathrooms")
  @@index([locationId])
}

model Task {
  taskId        Int             @id @default(autoincrement()) @map("task_id")
  taskName      String          @map("task_name")
  taskDescription String?       @map("task_description")
  taskIcon      String?         @map("task_icon")
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  bathroomTasks BathroomTask[]
  cleaningTasks CleaningTask[]

  @@map("tasks")
}

model BathroomTask {
  bathroomTaskId Int      @id @default(autoincrement()) @map("bathroom_task_id")
  bathroomId     Int      @map("bathroom_id")
  taskId         Int      @map("task_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  bathroom       Bathroom @relation(fields: [bathroomId], references: [bathroomId])
  task           Task     @relation(fields: [taskId], references: [taskId])

  @@map("bathroom_tasks")
  @@index([bathroomId])
  @@index([taskId])
}

model Cleaning {
  cleaningId Int             @id @default(autoincrement()) @map("cleaning_id")
  bathroomId Int             @map("bathroom_id")
  userId     Int             @map("user_id")
  createdAt  DateTime        @default(now()) @map("created_at")
  updatedAt  DateTime        @updatedAt @map("updated_at")
  bathroom   Bathroom        @relation(fields: [bathroomId], references: [bathroomId])
  user       User            @relation(fields: [userId], references: [id])
  tasks      CleaningTask[]

  @@map("cleanings")
  @@index([bathroomId])
  @@index([userId])
}

model CleaningTask {
  cleaningTaskId Int       @id @default(autoincrement()) @map("cleaning_task_id")
  cleaningId     Int       @map("cleaning_id")
  taskId         Int       @map("task_id")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  cleaning       Cleaning  @relation(fields: [cleaningId], references: [cleaningId])
  task           Task      @relation(fields: [taskId], references: [taskId])

  @@map("cleaning_tasks")
  @@index([cleaningId])
  @@index([taskId])
}

model Inspection {
  inspectionId Int              @id @default(autoincrement()) @map("inspection_id")
  bathroomId   Int              @map("bathroom_id")
  imageUrl     String           @map("image_url")
  inspectionDate DateTime       @map("inspection_date")
  createdAt    DateTime         @default(now()) @map("created_at")
  updatedAt    DateTime         @updatedAt @map("updated_at")
  bathroom     Bathroom         @relation(fields: [bathroomId], references: [bathroomId])
  inspectedItems InspectionItem[]

  @@map("inspection")
  @@index([bathroomId])
}

model InspectionItem {
  inspectionItemId Int        @id @default(autoincrement()) @map("inspection_item_id")
  inspectionId     Int        @map("inspection_id")
  inspectionReason String     @map("inspection_reason")
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")
  inspection       Inspection @relation(fields: [inspectionId], references: [inspectionId])

  @@map("inspection_items")
  @@index([inspectionId])
}

model AppSetting {
  id                Int      @id @default(autoincrement())
  theme             String   @default("classic")
  takePhotoOnReport Int      @default(1) @map("take_photo_on_report")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@map("app_settings")
}

// NextAuth tables
model Account {
  id                 Int     @id @default(autoincrement())
  userId             Int
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.LongText
  access_token       String? @db.LongText
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.LongText
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique @map("session_token")
  userId       Int      @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
